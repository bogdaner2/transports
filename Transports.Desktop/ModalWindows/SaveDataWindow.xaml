<Window x:Class="Transports.Desktop.ModalWindows.SaveDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SaveDataWindow" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock>Serialize data into files?</TextBlock>

        <WrapPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button x:Name="YesBtn" IsDefault="True" MinWidth="60" Margin="0,0,10,0">Yes</Button>
            <Button x:Name="NoBtn" IsCancel="True" MinWidth="60">No</Button>
        </WrapPanel>

    </Grid>
</Window>
