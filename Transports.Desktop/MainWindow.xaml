<Window x:Class="Transports.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Transports.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="820">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" >
            <Label Width="200" HorizontalContentAlignment="Center">Transports system</Label>
            <Button Margin="20,0,0,0" Width="80" Content="Drivers" Click="Button_On_Drivers_Page"></Button>
            <Button Margin="20,0,0,0" Width="80" Content="Shifts" Click="Button_On_Shifts_Page"></Button>
            <Button Margin="20,0,0,0" Width="80" Content="DriverShifts" Click="Button_On_DriverShifts_Page"></Button>
            <Button Margin="20,0,0,0" Width="80" Content="Routes" Click="Button_On_Routes_Page"></Button>
            <Button Margin="20,0,0,0" Width="80" Content="Transports" Click="Button_On_Transports_Page"></Button>
            <Button Margin="20,0,0,0" Width="80" Content="Passports" Click="Button_On_Passports_Page"></Button>
        </StackPanel>
        <Frame x:Name="Main" Margin="0,31,-0.4,-0.2" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
